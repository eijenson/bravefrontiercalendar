<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eijenson.braveflontiercarendar.view.MainActivity">

    <include
        android:id="@+id/calendar"
        layout="@layout/my_calendar_view"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <eijenson.braveflontiercarendar.view.custom.CalendarColumn
        android:id="@+id/calendarColumn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/scrollView2"
        app:layout_constraintTop_toBottomOf="@+id/calendar"
        app:text="222"/>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/calendarColumn">

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"/>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
